extends layout

block content
    #level
        .container
            .row
                .offset-md-3.col-md-6.text-center
                    .row
                        .col.head_1
                            h1 CASE 5
                    .row.head_2
                        .col
                            .embed-responsive.embed-responsive-16by9
                                iframe.embed-responsive-item(src="https://www.youtube.com/embed/Mz9-fciSOmc" frameborder="0" allow="autoplay; encrypted-media" allowfullscreen)
                    .row
                        form(action="/play" method="POST")
                            .form-group
                                input.form-control(type="text" placeholder="Answer" name="option")
                            .form-group
                                input.btn.btn-default.pl-button(type="submit" value="SUBMIT")