extends layout

block content
  .bg-image
    .container
      .row
        .col-md-12.text-center.head
          h2 REGISTER
      .login-form
        .row
          .col-md-4.offset-md-4
            form(action="/register" method="POST")
              .input-holder
                i.icon.far.fa-user
                input.input(type="text" name="name" placeholder="Name")
              .input-holder
                i.icon.far.fa-envelope
                input.input(type="email" name="email" placeholder="Email")
              .input-holder
                i.icon.fas.fa-users
                input.input(type="text" name="teamname" placeholder="Team Name")
              .input-holder
                i.icon.far.fa-building
                input.input(type="text" name="collegename" placeholder="College Name")
              .input-holder
                i.icon.fas.fa-phone
                input.input(type="text" name="phonenumber" placeholder="Phone Number")
              .input-holder
                i.icon.fas.fa-lock
                input.input(type="password" name="password" placeholder="Password")
              .input-holder
                i.icon.fas.fa-lock
                input.input(type="password" name="password-confirm" placeholder="Confirm Password")
              .reg
                p Already registered ?
                  a.link(href="/login")  Login
              .input-holder-button
                input.pl-button(type="submit" value="sign up")